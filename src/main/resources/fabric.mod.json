{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",

  "name": "Automated Crafting",
  "description": "Adds a simple autocrafter block. Has a simple mode and a... not simple mode. ",
  "authors": [
    "${author}"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/${archives_base_name}",
    "sources": "https://gitlab.com/${author}/${mod_id}"
  },

  "license": "CC0-1.0",
  "icon": "assets/${mod_id}/${mod_id}_icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "${maven_group}.${mod_id}.${init_class}"
    ],
    "client": [
      "${maven_group}.${mod_id}.${client_init_class}"
    ],
    "modmenu": [
      "${maven_group}.${mod_id}.AutomatedCraftingModMenuIntegration"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": ">=${min_fabric_api_version}",
    "minecraft": ">=${min_minecraft_version} <=${minecraft_version}"
  },
  "custom": {
    "modupdater": {
      "strategy": "curseforge",
      "projectID": 389435
    }
  }
}

